alias sysup="sudo apt-get autoclean -y && sudo apt-get autoremove -y && sudo apt-get update -y && sudo apt-get upgrade -y && sudo apt-get dist-upgrade -y"

# reboot / halt / poweroff
alias reboot='sudo /sbin/reboot -r now'
alias poweroff='sudo /sbin/poweroff -r now'
alias halt='sudo /sbin/halt -r now'
alias shutdown='sudo /sbin/shutdown -r now'

# start simple server
alias serve="python -m SimpleHTTPServer"
alias phpserve="php -S localhost:8000"

# npm aliases
alias npmo="npm outdated --depth=0"
alias npmnewest="npm outdated --depth=0 --parseable | cut -d: -f4"

alias v="vim"

alias gitwap="git log -i --grep=wap --no-merges --color --decorate --pretty='format: * %s'"

alias opensocks='networksetup -setsocksfirewallproxy "WI-FI" localhost 8080'
alias closesocks='networksetup -setsocksfirewallproxystate "WI-FI" off'

alias listenports='lsof -i | grep LISTEN'
