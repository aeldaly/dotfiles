    name = Gilad Peleg
    email = giladp007@gmail.com
[core]
    autocrlf = input
    excludesfile = ~/.dotfiles/gitignore_global.txt
[push]
    default = simple
[color]
    status=auto
    branch=auto
    interactive=auto
    diff=auto
[alias]
    st = status
    ch = checkout
    br = branch
    co = commit
    pu = push
    fe = fetch
    stats = !git shortlog -sn master | head
    freq = !history | cut -c 8- | grep git | sort | uniq -c  | sort -n -r | head -n 5
